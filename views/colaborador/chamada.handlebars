<div class="text-center">
  <h2> {{chamada.titulo}} </h2>
</div>

<hr>
<div class="card mt-4">
  <div class="card-body">

    <div class="form-group">
      <h6>Título:</h6>
      <p> {{chamada.titulo}} </p>
    </div>

    <div class="form-group">
      <h6> Descrição: </h6>
      <textarea class="form-control"> {{chamada.descricao}} </textarea>
    </div>

    <div class="form-group">
      <h6> Setor: </h6>
      <p> {{chamada.setor}} </p>
    </div>

    <div class="form-group">
      <h6> Status: </h6>
      <p> {{chamada.status}} </p>
    </div>

    <hr>

    {{#if chamada.resolvida}}
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" id="resolvida" name="resolvida" checked disabled>
      <i class="fas fa-check-circle"></i>
      <label class="form-check-label" for="resolvida">
        Resolvida
      </label>
    </div>
    {{/if}}

    {{#if chamada.pendente}}
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" id="pendente" name="pendente" checked disabled>
      <i class="fas fa-ban"></i>
      <label class="form-check-label" for="pendente">
        Pendente
      </label>
    </div>

    <br>

    <i class="fas fa-edit"></i>
    <label> Comentário: </label>
    <h4> {{chamada.comentario}} </h4> <br>
    {{/if}}

    <small>Data de criação: {{chamada.data}} </small> <br>

  </div>
</div>