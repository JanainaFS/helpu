<h2> Chamadas Disponíveis! </h2>
<hr>

{{#each chamadas}}
{{#if situacao}}

<div class="card mt-4">
  <div class="card-body">
    <h4>{{titulo}}</h4><br>
    <small> Status: {{status}} </small> <br>
    <small>Data de criação: {{data}}</small> <br>

    <a href="/colab/chamada/{{_id}}"> <button type="submit" class="btn btn-success mt-2"> Ver chamada </button></a>

  </div>
</div>

{{else}}
<h4 class="mt-4"> Nenhuma chamada cadastrada.</h4>
{{/if}}